<h1>Details</h1>
<%= link_to "Voltar", root_path %>
<%= link_to "Editar", edit_transaction_path %>
<%= link_to 'Apagar', @transaction, method: :delete, data: { confirm: 'Mandar transação para o limbo?' } %>

  <h3>Identificador</h3>
    <p><%= @transaction.id %></p>
  <h3>Quantidade</h3>
    <p><%= @transaction.amount %></p>
  <h3>Moeda</h3>
    <p><%= @transaction.str_converter(@transaction.currency) %></p>
  <h3>Tipo</h3>
    <p><%= @transaction.str_converter(@transaction.transaction_type) %></p>
  <h3>Total</h3>
    <p><%= @transaction.total(@transaction) %></p>
  <h3>Cotação</h3>
  <p><%= "R$ #{@transaction.quotation}" %></p>
  <h3>Data</h3>
    <p style="color:red;"><%= @transaction.created_at.strftime('%d/%m/%Y') %></p>
